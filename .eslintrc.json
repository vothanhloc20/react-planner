{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["react-app", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "printWidth": 80,
              "trailingComma": "es5",
              "semi": false,
              "singleQuote": true,
              "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
              "endOfLine": "auto"
            }
        ]
    }
}
